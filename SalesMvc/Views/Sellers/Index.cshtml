@model IEnumerable<SalesMvc.Models.Seller>
@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>

<p>@Html.DisplayNameFor(model => model.Name)</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
        @foreach (var seller in Model)
        {
    <tr>
        <td>@seller.Name</td>
        <td>@seller.Email</td>
        <td>@seller.BirthDate</td>
        <td>@seller.BaseSalary</td>
        <td><a asp-action="Edit" asp-route-id="@seller.Id">Edit</a></td>
        <td><a asp-action="Details" asp-route-id="@seller.Id">Details</a></td>
        <td><a asp-action="Delete" asp-route-id="@seller.Id">Delete</a></td>
    </tr>
        }
    </thead>
</table>